# Kiosk Deployment Environment Variables
# Copy this file to .env.production for production deployment

# ============================================
# APPLICATION SETTINGS
# ============================================

# Application Name
NEXT_PUBLIC_APP_NAME="FastCaisse Kiosk"

# Application URL
NEXT_PUBLIC_APP_URL="https://kiosk.restaurant.com"

# API Endpoint (if using backend)
# NEXT_PUBLIC_API_URL="https://api.restaurant.com"

# ============================================
# KIOSK SETTINGS
# ============================================

# Kiosk Mode Enabled (disables certain features)
NEXT_PUBLIC_KIOSK_MODE=true

# Idle Timer Settings (seconds)
NEXT_PUBLIC_IDLE_WARNING_TIME=90
NEXT_PUBLIC_IDLE_TIMEOUT_TIME=120

# Session Timeout (minutes)
NEXT_PUBLIC_SESSION_TIMEOUT=15

# Auto Reset on Error
NEXT_PUBLIC_AUTO_RESET_ON_ERROR=true

# ============================================
# FEATURE FLAGS
# ============================================

# Enable/Disable Features
NEXT_PUBLIC_ENABLE_ONLINE_ORDERING=true
NEXT_PUBLIC_ENABLE_PAYMENT=true
NEXT_PUBLIC_ENABLE_LOYALTY=false
NEXT_PUBLIC_ENABLE_FEEDBACK=true

# Theme
NEXT_PUBLIC_DEFAULT_THEME="light"
NEXT_PUBLIC_ALLOW_THEME_TOGGLE=false

# Languages (comma-separated)
NEXT_PUBLIC_SUPPORTED_LANGUAGES="en,fr,nl,de,es,it"
NEXT_PUBLIC_DEFAULT_LANGUAGE="en"

# ============================================
# PAYMENT SETTINGS
# ============================================

# Payment Gateway (if integrated)
# NEXT_PUBLIC_PAYMENT_GATEWAY_URL="https://payment-gateway.trusted.com"
# NEXT_PUBLIC_PAYMENT_PROVIDER="stripe"
# NEXT_PUBLIC_STRIPE_PUBLIC_KEY="pk_live_..."

# Tax Rate (percentage)
NEXT_PUBLIC_TAX_RATE=21

# Currency
NEXT_PUBLIC_CURRENCY="EUR"
NEXT_PUBLIC_CURRENCY_SYMBOL="â‚¬"

# ============================================
# SECURITY
# ============================================

# Disable Right-Click (via JavaScript)
NEXT_PUBLIC_DISABLE_RIGHT_CLICK=true

# Disable Developer Tools (via JavaScript detection)
NEXT_PUBLIC_DISABLE_DEV_TOOLS=true

# Disable Text Selection
NEXT_PUBLIC_DISABLE_TEXT_SELECTION=false

# ============================================
# BRANDING
# ============================================

# Restaurant Name
NEXT_PUBLIC_RESTAURANT_NAME="FastCaisse Restaurant"

# Restaurant Logo URL
NEXT_PUBLIC_LOGO_URL="/assets/logo.svg"

# Primary Brand Color
NEXT_PUBLIC_BRAND_COLOR="#3B82F6"

# Support Contact
NEXT_PUBLIC_SUPPORT_EMAIL="support@restaurant.com"
NEXT_PUBLIC_SUPPORT_PHONE="+1-XXX-XXX-XXXX"

# ============================================
# MONITORING & LOGGING
# ============================================

# Error Reporting (Sentry, LogRocket, etc.)
# NEXT_PUBLIC_SENTRY_DSN="https://xxx@sentry.io/xxx"

# Analytics (Google Analytics, Plausible, etc.)
# NEXT_PUBLIC_GA_TRACKING_ID="G-XXXXXXXXXX"

# Enable Console Logs in Production
NEXT_PUBLIC_ENABLE_LOGS=false

# ============================================
# PERFORMANCE
# ============================================

# Image Optimization
NEXT_PUBLIC_OPTIMIZE_IMAGES=true

# Lazy Loading
NEXT_PUBLIC_LAZY_LOAD_IMAGES=true

# Cache Duration (seconds)
NEXT_PUBLIC_CACHE_DURATION=3600

# ============================================
# MAINTENANCE
# ============================================

# Maintenance Mode
NEXT_PUBLIC_MAINTENANCE_MODE=false
NEXT_PUBLIC_MAINTENANCE_MESSAGE="System is under maintenance. Please try again later."

# Version
NEXT_PUBLIC_APP_VERSION="1.0.0"

# Build Time (auto-generated during build)
# NEXT_PUBLIC_BUILD_TIME=""

# ============================================
# DEVELOPMENT ONLY (DO NOT USE IN PRODUCTION)
# ============================================

# Development Mode (disable all security restrictions)
# NEXT_PUBLIC_DEV_MODE=false