# Restaurant Kiosk Environment Variables

# Application
NEXT_PUBLIC_APP_NAME="Restaurant Kiosk"
NEXT_PUBLIC_APP_URL="http://localhost:3000"

# Kiosk Settings
NEXT_PUBLIC_IDLE_TIMEOUT=90000          # 90 seconds
NEXT_PUBLIC_WARNING_TIMEOUT=30000       # 30 seconds
NEXT_PUBLIC_DEFAULT_LANGUAGE="en"

# Tax Configuration
NEXT_PUBLIC_TAX_RATE=0.085              # 8.5%

# Payment Gateway (for future integration)
# NEXT_PUBLIC_STRIPE_PUBLIC_KEY=
# STRIPE_SECRET_KEY=
# NEXT_PUBLIC_SQUARE_APP_ID=
# SQUARE_ACCESS_TOKEN=

# Analytics (optional)
# NEXT_PUBLIC_GA_MEASUREMENT_ID=
# NEXT_PUBLIC_HOTJAR_ID=

# Error Tracking (optional)
# NEXT_PUBLIC_SENTRY_DSN=
# SENTRY_AUTH_TOKEN=

# Backend API Configuration (Laravel backend integration)
NEXT_PUBLIC_API_URL=http://127.0.0.1/FASTCAISSE/food-ordering-app/public

# Restaurant Configuration
# NEXT_PUBLIC_RESTAURANT_NAME determines which restaurant's menu, languages, and settings are loaded
# The kiosk will automatically fetch:
# - Menu items and categories for this restaurant
# - Available languages for this restaurant  
# - Default language setting for this restaurant
# Examples: "Test-FastCaisse", "UOVO", or any other configured restaurant name
NEXT_PUBLIC_RESTAURANT_NAME=Test-FastCaisse

# Kiosk Restrictions
NEXT_PUBLIC_ENABLE_KIOSK_RESTRICTIONS=false

# Image Optimization
# NEXT_PUBLIC_IMAGE_CDN_URL=

# Feature Flags
NEXT_PUBLIC_ENABLE_IDLE_TIMER=true
NEXT_PUBLIC_ENABLE_ANALYTICS=false
NEXT_PUBLIC_ENABLE_ERROR_TRACKING=false

# Development
NODE_ENV=development